%Environnements theoremstyle: theoreme, propriete, proprietes
\newenvironment{theoreme}[1][]{%
\mdfsetup{%
style = theoremstyle,
frametitle={%
\tikz[baseline=(current bounding box.east),outer sep=0pt]
\node[anchor=east,rectangle,fill=couleurFond]
{\strut Théorème:~#1};},%
}
\begin{mdframed}[]\relax%
}{\end{mdframed}
}
%
